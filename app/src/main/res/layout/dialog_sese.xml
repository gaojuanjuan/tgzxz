<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="温馨提示"
    android:padding="10dp"
    android:textColor="@color/cent"
    android:textSize="18sp"
    android:layout_gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xian"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sese_cent"
        android:text="您还有5就到1分钟了，再坚持一下就有钱了哦！~~"
        android:padding="10dp"
        android:background="#fff"
        android:textColor="@color/cent"
        android:textSize="15sp"
        android:layout_gravity="center"/>
    <include
        android:id="@+id/in_my_gg"
        layout="@layout/stye_mygg_latout"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sese_back"
            android:text="过会再来"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/shanp_yuee_bao_tur"
            android:layout_weight="1"
            android:textColor="@color/cent"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:layout_gravity="center"/>
        <TextView
            android:background="@drawable/shanp_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sese_bark"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="再看看"

            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>