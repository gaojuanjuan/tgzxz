<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:fitsSystemWindows="true"
    android:background="#fff"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_my_ranking"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.2"
            android:textColor="@color/cent"
            android:layout_marginRight="10dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_my_ranking_id"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/tishi"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_my_ranking_phone"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@color/tishi"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_my_ranking_money"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@color/codetext"
            android:textSize="18sp"/>
</LinearLayout>