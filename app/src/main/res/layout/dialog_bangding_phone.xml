<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_sex_default_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="X"
                android:textColor="#c9c3c3"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="30dp"
                >
                <TextView
                    android:id="@+id/tv_bind_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="您需要先绑定手机号"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_bangding_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@mipmap/phone"
                    android:drawablePadding="10dp"
                    android:hint="请输入手机号"
                    android:maxLines="12"
                    android:textColor="#000"
                    android:textColorHint="#e5e5e5"
                    android:textSize="14sp" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/et_bangding_yanzheng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/code"
                            android:drawablePadding="10dp"
                            android:hint="请输入验证码"
                            android:maxLines="12"
                            android:textColor="#000"
                            android:textColorHint="#e5e5e5"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bangding_yanzheng"
                        android:layout_width="0dp"
                        android:layout_weight="1.2"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shanp_code"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="获取验证码"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="#e5e5e5"/>


                <Button
                    android:id="@+id/bt_bangding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#17ace7"
                    android:text="绑定"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>



</LinearLayout>