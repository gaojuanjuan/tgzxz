<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_news_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8fa"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_back"
                android:src="@drawable/selector_search_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"/>

            <EditText
                android:id="@+id/ed_news_so"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_tv_bg"
                android:drawablePadding="15dp"
                android:hint="请输入搜索关键字"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000"
                android:textColorHint="#e5e5e5"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/gift"
                android:layout_gravity="center"
                android:paddingRight="5dp"
                android:background="@drawable/shape_search"/>
            <TextView
                android:id="@+id/tv_news_ture"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/shape_search"
                android:text="搜索"
                android:textColor="#323232"
                android:textSize="15sp"
                android:layout_marginRight="@dimen/dimen_10dp"/>

            <!--<EditText-->
            <!--android:id="@+id/ed_news_so"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/bg_main_so"-->
            <!--android:drawableLeft="@mipmap/icon_so_right"-->
            <!--android:drawablePadding="15dp"-->
            <!--android:hint="请输入搜索关键字"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:textColor="#000"-->
            <!--android:textColorHint="#e5e5e5"-->
            <!--android:textSize="14sp" />-->

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="0.5dp"
        android:background="#e5e5e5" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tb_so_teile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabIndicatorColor="#F85959"
        app:tabSelectedTextColor="#F85959"
        app:tabTextColor="#817b7b" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_so_teile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>