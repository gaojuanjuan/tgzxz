<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dilog_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/dimen_5dp"
        android:text="X"
        android:textColor="@color/codetext"
        android:textSize="@dimen/common_15sp" />

    <TextView
        android:id="@+id/tv_news_dilog_teile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:padding="10dp"
        android:text="邀请收徒的红包"
        android:textColor="@color/cent"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_news_dilog_cent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:text=" 邀请好友成功收徒，
        即可获得2.5元邀请红包奖励，
和更多师徒贡献红包"
        android:textColor="@color/cent"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_yaoqing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shanp_pop_bg"
        android:padding="@dimen/dimen_5dp"
        android:text="邀请码已复制，请在分享时粘贴，以便成功邀请好友！"
        android:textColor="@color/tishi"
        android:visibility="gone">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_share_wechat"
            style="@style/shared"
            android:layout_weight="1"
            android:drawableTop="@mipmap/weixin"
            android:text="微信" />

        <TextView
            android:id="@+id/iv_share_sinaweibo"
            style="@style/shared"
            android:layout_toRightOf="@+id/iv_share_wechat"
            android:layout_weight="1"
            android:drawableTop="@mipmap/pengyouquan"
            android:text="朋友圈"
            android:textColor="@color/cent" />


        <TextView
            android:id="@+id/iv_share_qq"
            style="@style/shared"
            android:layout_below="@+id/iv_share_sinaweibo"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qq"
            android:text="QQ"
            android:textColor="@color/cent" />


        <TextView
            android:id="@+id/iv_share_qzone"
            style="@style/shared"
            android:layout_below="@+id/iv_share_sinaweibo"
            android:layout_toRightOf="@+id/iv_share_wechat"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qqhongjian"
            android:text="QQ空间"
            android:textColor="@color/cent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="*记得提醒好友填写邀请码"
        android:textColor="@color/tishi"
        android:textSize="13sp" />
</LinearLayout>