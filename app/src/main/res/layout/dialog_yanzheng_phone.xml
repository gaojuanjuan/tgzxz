<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sex_default_bg"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="跳过之后无法获取红包奖励!!!"
            android:textColor="@color/codetext"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back_diogl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="继续跳过~~"
                android:textColor="#000"
                android:textSize="@dimen/common_15sp" />

            <TextView
                android:id="@+id/tv_dism_diove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shanp_get_yanzheng"
                android:padding="10dp"
                android:text="返回填写信息"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/common_15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>