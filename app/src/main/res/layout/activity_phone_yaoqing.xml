<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="输邀请码认师傅"
            android:textColor="@color/cent"
            android:textSize="@dimen/teile_text" />

        <TextView
            android:id="@+id/iv_yanzheng_tiaoguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="跳过"
            android:textColor="@color/tishi"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xian" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_banner"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textColor="@color/tishi"
        android:layout_marginRight="40dp"
        android:text="输入邀请码再获得1元红包！邀请码在比你早注册的朋友那里获得"
        android:textSize="14sp" />




    <EditText
        android:id="@+id/et_yanzheng_yaoqingma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@mipmap/yaoingma"
        android:drawablePadding="10dp"
        android:hint="邀请码(可不填)"
        android:background="@null"
        android:textColor="@color/cent"
        android:textColorHint="#999797"
        android:textSize="17sp" />
<View
    android:layout_width="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="13dp"
    android:layout_height="0.5dp"
    android:background="@color/xian"/>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:background="@drawable/shanp_get_yanzheng"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/white"
        android:text="提交邀请码"
        android:textSize="18sp" />
</LinearLayout>