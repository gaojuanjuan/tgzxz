<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/selector_back_bg" />


            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/tcolor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/gg_time"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#fff"
                android:padding="10dp"
                android:textColor="@color/codetext" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/shape_rule_bg"
            android:padding="10dp"
            android:text="温馨提示：\n1.点击广告浏览5秒以上，即可获奖励（每天2次机会）\n2.点击不同广告，可以增加大额奖励概率呦！\n3.如果未获得奖励，请退出隔一段时间重新点击\n4.因有些广告可能会直接下载，建议您在wifi下点击！"
            android:textColor="@color/codetext" />
        <!--横幅广告-->
        <LinearLayout
            android:id="@+id/ll_cent_hengfu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_rule_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bannerContainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:minHeight="50dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/xunfeibanner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:minHeight="50dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/baidubanner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:minHeight="50dp"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@+id/rl_banner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:background="#fff"
                android:minHeight="50dp">

                <ImageView
                    android:id="@+id/disanfang_xiaomi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:minHeight="50dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="广告"
                    android:textColor="@color/tishi"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_bannerimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#fff"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/bannerimae"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/bannerimae"
                    android:textColor="@color/tishi"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="广告"
                    android:textColor="@color/tishi"
                    android:textSize="13sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_east"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/shape_east_bg"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_east_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="hahahah"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="来源:东方头条"
                        android:textColor="#77787a"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="点击看段子，得20金币"
                        android:textColor="#77787a"
                        android:textSize="10sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_east_img"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xunfeibanner2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:visibility="gone" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/banner_ad_unit_id" />


        </LinearLayout>


        <include
            android:id="@+id/in_my_gg"
            layout="@layout/stye_mygg_latout" />
    </LinearLayout>

</ScrollView>