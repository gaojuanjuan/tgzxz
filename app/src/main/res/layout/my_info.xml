<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <include layout="@layout/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="账号"
        android:textColor="#858585" />

    <include layout="@layout/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="头像"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_my_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <include layout="@layout/line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="甜果ID"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/iv_my_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="@color/tishi" />
    </RelativeLayout>

    <include layout="@layout/line" />


    <RelativeLayout
        android:id="@+id/ll_my_phone"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="绑定手机号"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/iv_my_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:gravity="right"
            android:hint="请绑定手机号"
            android:padding="10dp"
            android:textColor="@color/tishi"
            android:textColorHint="@color/tishi"
            android:textSize="@dimen/common_15sp" />
    </RelativeLayout>

    <include layout="@layout/line" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:text="个人信息"
        android:textColor="#858585" />

    <include layout="@layout/line" />


    <RelativeLayout
        android:id="@+id/ll_my_women"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="性别"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/iv_my_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="男"
            android:textColor="@color/tishi" />
    </RelativeLayout>

    <include layout="@layout/line" />


    <RelativeLayout
        android:id="@+id/ll_my_yers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="出生年份"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_my_yers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="未知"
            android:textColor="@color/tishi" />
    </RelativeLayout>

    <include layout="@layout/line" />


</LinearLayout>