<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.tianguo.zxz.activity.MyActivity.YYDetailActivity">


    <TextView
        android:id="@+id/tv_title"
        android:text="应用详情"
        style="@style/title_style"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/iv_yy_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/add"
            />
        <TextView
            android:id="@+id/tv_teile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_yy_icon"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="sssssssssssssssss"
            android:maxLength="10"
            android:textColor="#000"
            android:layout_alignTop="@+id/iv_yy_icon"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_yy_icon"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/iv_yy_icon"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:text="sssssssssssssssss"
            android:textColor="@color/yyxz_item_color"
           />

        <TextView
            android:id="@+id/tv_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/iv_yy_icon"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/yyxz_item_color"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_gf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="11sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/yy_detail_ga_bg"
                android:textColor="@color/yyxz_detail_color"
                android:gravity="center"
              />
            <TextView
                android:id="@+id/tv_aq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textSize="11sp"
                android:text="官方"
                android:background="@drawable/yy_detail_ga_bg"
                android:gravity="center"
                android:textColor="@color/yyxz_detail_color"
                />

        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        android:layout_alignParentBottom="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shuoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="任务说明"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:textColor="@color/text_color"/>
            <com.tianguo.zxz.view.MyListView
                android:id="@+id/my_list_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="软件介绍"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textColor="@color/text_color"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_rjjs_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </ScrollView>

    <RadioButton
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yy_detail_btn_bg"
        android:text="立即安装"
        android:button="@null"
        android:padding="10dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="20sp"/>
</LinearLayout>
