<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_help_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/selector_back_bg"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_news_fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/share"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xian" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tianguo.zxz.view.MyScrollView
            android:id="@+id/sc_cent_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/iv_hong_xiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingRight="10dp"
                        android:src="@mipmap/shouye_hongbao_xiao"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_main_news_teile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_hong_xiao"
                        android:background="#fff"
                        android:textColor="#444444"
                        android:textSize="20sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_main_news_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:textColor="@color/tishi"
                    android:textSize="14sp" />

                <WebView
                    android:id="@+id/wv_main_newxs"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="16dp" />



                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tv_look_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="查看全文"
                        android:gravity="center"
                        android:textColor="#71acf9"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/zk"
                        android:background="#f9f9f9"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="5dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f9f9f9"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:id="@+id/ll_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/shape_zan_bg"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/zan"/>
                            <TextView
                                android:id="@+id/tv_zan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="17"
                                android:gravity="center"
                                android:textColor="#eba48c"
                                android:layout_marginLeft="8dp"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:padding="10dp">
                            <ImageView
                                android:id="@+id/iv_wx"
                                style="@style/share_iv_style"
                                android:src="@mipmap/weixin"
                                android:layout_marginRight="20dp"/>
                            <ImageView
                                android:id="@+id/iv_detail_pyq"
                                style="@style/share_iv_style"
                                android:src="@mipmap/pengyouquan"
                                android:layout_marginRight="20dp"/>
                            <ImageView
                                android:id="@+id/iv_detail_qq"
                                style="@style/share_iv_style"
                                android:src="@mipmap/qq"
                                android:layout_marginRight="20dp"/>
                            <ImageView
                                android:id="@+id/iv_detail_qqkj"
                                style="@style/share_iv_style"
                                android:src="@mipmap/qqhongjian"
                                android:layout_marginRight="10dp"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/in_my_gg"
                        android:background="@drawable/shape_cpa4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/iv_cent_gg"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/cent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"/>
                        <ImageView
                            android:id="@+id/gv_cent_gg"
                            android:layout_below="@+id/iv_cent_gg"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:scaleType="fitXY"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:id="@+id/tv_open_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_open"
                                android:textColor="#939393"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/tv_ad_source"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:textColor="#939393"
                                android:layout_marginRight="10dp"
                                android:layout_centerVertical="true"
                                android:textSize="14sp"
                                android:drawablePadding="3dp"
                                android:drawableRight="@mipmap/ad"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_cent_web"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/tv_cent_gg_teile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="#000"
                        android:textSize="15dp" />
                    <View
                        android:id="@+id/detail_line1"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#e5e5e5"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ll_current_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="实时热搜"
                            android:textColor="#000"
                            android:textSize="15dp" />

                        <com.tianguo.zxz.view.MyGridView
                            android:id="@+id/gv_cent_shishi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="2" />
                    </LinearLayout>

                    <View
                        android:id="@+id/detail_line2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#e5e5e5"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/ryl_relist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/detail_line3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#e5e5e5"
                        android:visibility="gone"/>
                    <!--横幅广告-->
                    <RelativeLayout
                        android:id="@+id/ll_sponsors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/ss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#fff"
                            android:gravity="center"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="赞助商提供"
                            android:textColor="#e5e5e5"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_toRightOf="@id/ss"
                            android:lines="1"
                            android:padding="10dp"
                            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
                            android:textColor="#e5e5e5" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:layout_toLeftOf="@id/ss"
                            android:lines="1"
                            android:padding="10dp"
                            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
                            android:textColor="#e5e5e5" />
                    </RelativeLayout>
                    <!--横幅广告-->
                    <LinearLayout
                        android:id="@+id/ll_cent_hengfu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/bannerContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp" />

                        <LinearLayout
                            android:id="@+id/xunfeibanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:minHeight="50dp"
                            android:orientation="vertical"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/baidubanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="5dp"
                            android:gravity="center_horizontal"
                            android:minHeight="50dp"
                            android:orientation="vertical" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.tianguo.zxz.view.MyScrollView>


        <RelativeLayout
            android:id="@+id/ll_cent_fubiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bannerContainer_fubiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#201a1a"
                android:orientation="vertical" />
            <TextView
                android:layout_above="@id/bannerContainer_fubiao"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_x"
                android:textColor="@color/hint"
                android:gravity="center|bottom"
                android:background="@drawable/shape_delete"
                android:layout_alignParentRight="true"
                android:textSize="17sp"
                android:text="x"
                />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_tian_hong"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:visibility="gone"/>
</LinearLayout>