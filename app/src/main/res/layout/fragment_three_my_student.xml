<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#e83a3a"
    android:scrollbars="none"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@mipmap/student_bg"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:drawableTop="@mipmap/xunzhang"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#fafafa"
            android:text="排行榜"
            android:layout_marginBottom="14dp"
            android:drawablePadding="12dp"
            android:textSize="@dimen/common_15sp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shanp_studengt_bg">
            <LinearLayout
                android:id="@+id/ll_student_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_studeng_ranking_2"
                        android:gravity="center"
                        android:drawablePadding="15dp"
                        android:textColor="@color/tishi"
                        android:text="虚位以待"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/yaoqing02"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:textSize="21sp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_studeng_ranking_2_money"
                        android:gravity="center"
                        android:text="2.2元"
                        android:textColor="@color/codetext"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_studeng_ranking_1"
                        android:gravity="center"
                        android:drawablePadding="19dp"
                        android:text="虚位以待"
                        android:textColor="@color/tishi"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/yaoqing01"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="21sp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:id="@+id/tv_studeng_ranking_1_money"

                        android:text="2.2元"
                        android:textColor="@color/codetext"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_studeng_ranking_3"
                        android:gravity="center"
                        android:text="虚位以待"
                        android:drawablePadding="15dp"
                        android:textColor="@color/tishi"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/yaoqing03"/>
                    <TextView
                        android:id="@+id/tv_studeng_ranking_3_money"
android:visibility="gone"
                        android:layout_width="match_parent"
                        android:textSize="21sp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textColor="@color/codetext"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_student_tab"
                android:padding="@dimen/dimen_5dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_below="@+id/ll_student_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#efebeb"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="排行"
                    android:gravity="center"
                    android:layout_weight="1.2"
                    android:textColor="@color/cent"
                    android:textSize="@dimen/common_15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID号"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/cent"
                    android:textSize="@dimen/common_15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/cent"
                    android:textSize="@dimen/common_15sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收益额"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/cent"
                    android:textSize="@dimen/common_15sp"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_list_student"
                android:layout_below="@+id/ll_student_tab"
                android:layout_marginTop="15dp"
                android:fitsSystemWindows="true"
                android:layout_marginBottom="25dp"
                android:divider="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>