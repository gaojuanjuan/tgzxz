<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/bj_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dialog_share_other_wechatmoments_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_other_wechatmoments_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_qqbrowser" />

            <TextView
                android:id="@+id/dialog_share_other_wechatmoments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="微信朋友圈"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_wechat_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_wechat_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_platform_wechat_friends" />

            <TextView
                android:id="@+id/dialog_share_wechat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="微信好友"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_qzone_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_qzone_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_platform_qzone" />

            <TextView
                android:id="@+id/dialog_share_qzone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="QQ空间"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_wechatmoments_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_wechatmoments_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_platform_wechat_timeline" />

            <TextView
                android:id="@+id/dialog_share_wechatmoments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="微信朋友圈"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dialog_share_sinaweibo_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_sinaweibo_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_platform_sinaweibo" />

            <TextView
                android:id="@+id/dialog_share_sinaweibo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="新浪微博"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_qq_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_qq_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_platform_qq" />

            <TextView
                android:id="@+id/dialog_share_qq_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="QQ好友"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_copy_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_copy_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_platform_clipboard" />

            <TextView
                android:id="@+id/dialog_share_copy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="复制地址"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_share_more_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bj_item_yellow_selector"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/dialog_share_more_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/bj_share_platform_more" />

            <TextView
                android:id="@+id/dialog_share_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="更多"
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>